@model Review
@using PotluckPantry.Areas.Data.Entities

<div class="card">
    <div class="card-header">Write your review</div>
    <div class="card-body">
        <form asp-action="Review" asp-controller="Review" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-text">
                <div class="form-group">
                    <label asp-for="Description">What did you think of the recipe?</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-bottom:20px;">
                    <style>
                        .rating {
                            float: left;
                        }

                        .rating:not(:checked) > input {
                            position: absolute;
                            top: -9999px;
                            clip: rect(0,0,0,0);
                        }

                        .rating:not(:checked) > label {
                            float: right;
                            width: 1em;
                            padding: 0 .1em;
                            overflow: hidden;
                            white-space: nowrap;
                            cursor: pointer;
                            font-size: 200%;
                            line-height: 1.2;
                            color: #ddd;
                            text-shadow: 1px 1px #bbb, 2px 2px #666, .1em .1em .2em rgba(0,0,0,.5);
                        }

                            .rating:not(:checked) > label:before {
                                content: '★ ';
                            }

                        .rating > input:checked ~ label {
                            color: #f70;
                            text-shadow: 1px 1px #c60, 2px 2px #940, .1em .1em .2em rgba(0,0,0,.5);
                        }

                        .rating:not(:checked) > label:hover,
                        .rating:not(:checked) > label:hover ~ label {
                            color: gold;
                            text-shadow: 1px 1px goldenrod, 2px 2px #B57340, .1em .1em .2em rgba(0,0,0,.5);
                        }

                        .rating > input:checked + label:hover,
                        .rating > input:checked + label:hover ~ label,
                        .rating > input:checked ~ label:hover,
                        .rating > input:checked ~ label:hover ~ label,
                        .rating > label:hover ~ input:checked ~ label {
                            color: #ea0;
                            text-shadow: 1px 1px goldenrod, 2px 2px #B57340, .1em .1em .2em rgba(0,0,0,.5);
                        }

                        .rating > label:active {
                            position: relative;
                            top: 2px;
                            left: 2px;
                        }

                    </style>
                    <fieldset class="rating">
                        <legend>How many stars?:</legend>
                        <input asp-for="Score" type="radio" name="rating" value="5" /><label for="star5" title="Rocks!">5 stars</label>
                        <input asp-for="Score" type="radio" name="rating" value="4" /><label for="star4" title="Pretty good">4 stars</label>
                        <input asp-for="Score" type="radio" name="rating" value="3" /><label for="star3" title="Meh">3 stars</label>
                        <input asp-for="Score" type="radio" name="rating" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
                        <input asp-for="Score" type="radio" name="rating" value="1" /><label for="star1" title="Sucks big time">1 star</label>
                    </fieldset>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                        <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
</script>